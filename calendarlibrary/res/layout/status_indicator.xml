<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/pendingImg"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_fiber_manual_record_black_24dp"
        android:tint="@color/pending_date_Color"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/approvedImg"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_fiber_manual_record_black_24dp"
        android:tint="@color/approved_date_Color"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/cancelImg"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_fiber_manual_record_black_24dp"
        android:tint="@color/cancel_date_Color"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/completeImg"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_fiber_manual_record_black_24dp"
        android:tint="@color/complete_date_Color"
        android:visibility="gone" />


</LinearLayout>