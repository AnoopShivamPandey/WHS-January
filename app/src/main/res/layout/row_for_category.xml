<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#33CCCCCC"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="2dp"
        android:background="@color/colorGreenDark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_cat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/txt_catname"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_cat"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:text="catast"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/iv_openmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:tint="@color/white"
            android:src="@drawable/ic_expand_more" />
        <!-- <View
             android:layout_width="match_parent"
             android:layout_height="@dimen/_1sdp"
             android:background="@color/colorAccent"
             android:layout_marginLeft="@dimen/_30sdp"/>-->
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_Subcategory"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
</LinearLayout>