<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
android:background="@drawable/drawerback"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <LinearLayout
                android:clickable="true"
                android:id="@+id/userLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_height="wrap_content">
                    <include layout="@layout/side_menu_profile"/>
                    <LinearLayout
                        android:id="@+id/profile"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="90dp"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="18dp"
                            android:text="My Profile"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />
                        <!--<ImageView-->
                            <!--android:layout_width="30dp"-->
                            <!--android:layout_height="30dp"-->
                            <!--android:padding="8dp"-->
                            <!--android:layout_marginLeft="10dp"-->
                            <!--android:rotation="270"-->
                            <!--android:src="@drawable/down_arrow"/>-->

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:clickable="true"
                android:id="@+id/menuLayout"
                android:orientation="vertical"
                android:layout_below="@id/userLayout"
                android:layout_width="match_parent"
                android:layout_height="350dp">

                <LinearLayout
                    android:id="@+id/dashboard"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="40dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_dashboard"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        android:text="Dashboard"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="40dp"
                    android:background="#f8f8f8"/>
                <LinearLayout
                    android:id="@+id/booking"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="40dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_appointment_book"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        android:text="My booking"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/qrView"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="40dp"
                    android:background="#f8f8f8"/>
                <LinearLayout
                    android:id="@+id/qrButtonLL"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="40dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/qrimage"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        android:text="My QRCode"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/setting"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_marginLeft="40dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_settings_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        android:text="Setting"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/bookingView"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="40dp"
                    android:background="#f8f8f8"/>
                <LinearLayout
                    android:id="@+id/help"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="40dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_help_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        android:text="Help"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="40dp"
                    android:background="#f8f8f8"/>
                <LinearLayout
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="40dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_share_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        android:text="Share"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="40dp"
                    android:background="#f8f8f8"/>
                <LinearLayout
                    android:id="@+id/rateUs"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="40dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_stars_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        android:text="Rate Us"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="40dp"
                    android:background="#f8f8f8"/>
                <LinearLayout
                    android:id="@+id/signout"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="40dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_logout_button"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        android:text="Signout"
                        android:id="@+id/signoutText"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="40dp"
                    android:background="#f8f8f8"/>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>